        </ScrollView>
        <Button Text="Удалить" Grid.Column="0" Grid.Row="1" CornerRadius="30" Margin="50,5,50,5" BackgroundColor="OrangeRed" Clicked="deleteButton_Clicked"/>
    </Grid>
</ContentPage>