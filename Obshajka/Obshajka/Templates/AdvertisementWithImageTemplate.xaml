<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Obshajka.Templates.AdvertisementWithImageTemplate">
    <!--CornerRadius="30"-->
    <StackLayout BackgroundColor="White">
        <!--бордер не убирать, с frame не работает выбор!-->
        <Border Margin="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="30,30,30,30" />
            </Border.StrokeShape>
            <StackLayout Margin="0">
                <Border>
                    <Image Source="{Binding Image}" HeightRequest="150" WidthRequest="150"/>
                </Border>
                <Label Text="{Binding Title}" FontSize = "17"  TextColor = "Black" Margin="5" />
                <Label Text="{Binding Price, StringFormat='{0} ₽'}" FontSize="20"/>
                <!--<Label Text="{Binding DateOfAddition, StringFormat='Дата создания: {0}'}" FontSize="10"/>-->
                <!--<Label Text="{Binding Description, StringFormat='Возраст: {0}'}" />-->
            </StackLayout>
        </Border>
    </StackLayout>
</ContentView>
