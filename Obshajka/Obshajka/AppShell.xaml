<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Obshajka.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Obshajka"
    xmlns:pages="clr-namespace:Obshajka.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Route="MainPage"
                  Shell.FlyoutBehavior="Disabled"
                  ContentTemplate="{DataTemplate local:MainPage}"/>

    <ShellContent Route="RegistrationPage"
                  Shell.FlyoutBehavior="Disabled"
                  ContentTemplate="{DataTemplate pages:RegistrationPage}"/>

    <TabBar Route="Bar">
        <ShellContent 
            Title="advert"
            ContentTemplate="{DataTemplate pages:Advertisements}"/>

        <ShellContent
            Title="create"
            ContentTemplate="{DataTemplate pages:CreateAdvertisement}"/>

        <ShellContent
            Title="pfofile"
            ContentTemplate="{DataTemplate pages:ProfilePage}"/>
    </TabBar>

</Shell>
