    x:Class="Obshajka.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Obshajka"
    xmlns:pages="clr-namespace:Obshajka.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Route="MainPage"
                  Shell.FlyoutBehavior="Disabled"
                  ContentTemplate="{DataTemplate local:MainPage}"/>

    <ShellContent Route="RegistrationPage"
                  Shell.FlyoutBehavior="Disabled"
                  ContentTemplate="{DataTemplate pages:RegistrationPage}"/>

    <TabBar Route="Bar">
        <ShellContent 
            Title="Стена"
            Icon="adverts_icon6.png"
            ContentTemplate="{DataTemplate pages:Advertisements}"
            >
        </ShellContent>

        <ShellContent
            Title="Мои объявления"
            Icon="my_adverts_icon.png"
            ContentTemplate="{DataTemplate pages:MyAdvertisements}"/>
        

        <!--<ShellContent
